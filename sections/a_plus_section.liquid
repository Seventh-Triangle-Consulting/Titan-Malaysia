
{% if product.metafields.custom.a_plus_images != blank %}
<style>
  .a_plus_section-{{ section.id }} {
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  margin-top: {{ section.settings.margin_top_desktop }}px;
  }

  .aplus_image_text_div{display:flex;gap:54px;margin-bottom:70px;}
  .aplus_image_text_div:nth-child(even) {
    flex-direction: row-reverse;
  }

  .a_plus_section_div{padding:0 120px;max-width:1920px;margin:0 auto;}
  .aplus_image_div img{ width:100%;height:auto;}
  .a_plus_section_div{padding:0 120px;}
  .aplus_image_text_div:last-child{margin-bottom:0;}
  .aplus_image_div{line-height:0;width:45%;}
  .aplus_text_div{display:grid;place-content:center;width:55%;}
  .aplus_text_content_heading{color: #000;font-family: 'Rubik-Medium'; font-size: clamp(calc(25 * .8px),calc(25 * (100vw / var(--viewportDesktop))),calc(25 * 1.6px));
    line-height: clamp(30px, calc(31 * (100vw /  var(--viewportDesktop))), 32px);font-style: normal;font-weight: 500; /* 124% */letter-spacing: 0.25px;margin-bottom:10px;}
  .aplus_text_content_text{color: #414042;font-family: 'Rubik-Regular'; font-size: clamp(calc(20 * .8px),calc(20 * (100vw / var(--viewportDesktop))),calc(20 * 1.6px));
    line-height: clamp(31px, calc(32 * (100vw /  var(--viewportDesktop))), 33px);font-style: normal;font-weight: 400;}

  @media screen and (min-width:1900px) {
  .aplus_image_div img{width:96%;}
    .aplus_text_content_heading{    margin-bottom: 20px;}
  }
 @media screen and (min-width: 750px) and (max-width: 820px) {
  .a_plus_section_div{    padding: 0 80px;}
 }
  @media screen and (max-width: 749px) {
  .a_plus_section-{{ section.id }} {
  margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  margin-top: {{ section.settings.margin_top_desktop }}px;
  }
  .aplus_text_content_heading{ font-size: clamp(calc(23 * .8px),calc(23 * (100vw / 428)),calc(23 * 1.6px)); line-height: clamp(30px, calc(31 * (100vw /  428)), 32px);}
  .aplus_text_content_text{ font-size: clamp(calc(18 * .8px),calc(18 * (100vw / 428)),calc(18 * 1.6px));line-height: clamp(26px, calc(27 * (100vw /  428)), 28px);}
  .aplus_image_text_div{display:block;margin-bottom:45px;}
  .a_plus_section_div{padding:0;}
  .aplus_text_div{padding:14px 20px 0;width:100%;}
  .aplus_image_div{width:100%;}
  }
</style>

<section class="a_plus_section-{{ section.id }}" id="{{ section.id }}">
  {% assign aplus = product.metafields.custom.a_plus_images %}
  {% assign aplus_text = product.metafields.custom.a_plus_text %}

  <div class="a_plus_section_div">
    {% for aplus_image in aplus.value %}
      <div class="aplus_image_text_div">
        <div class="aplus_image_div">
          {{ aplus_image | image_url: width: '612' | image_tag: class: '' }}
        </div>
        <div class="aplus_text_div">
          {% assign aplus_text_content = aplus_text.value[forloop.index0] | split: '##' %}
          <p class="aplus_text_content_heading">{{ aplus_text_content[0] }}</p>
          <p class="aplus_text_content_text">{{ aplus_text_content[1] }}</p>
        </div>
      </div>
    {% endfor %}
  </div>
</section>
{% endif %}
{% schema %}
{
  "name": "A Plus Section",

  "settings": [
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_top_desktop",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin Top Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "a plus section"
    }
  ]
}
{% endschema %}
