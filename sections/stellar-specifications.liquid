      margin-bottom: 20px;
      padding-right:23px;
    }
    .stellar-specifications-tab{
      font-size: 15px;
      line-height: 24px;
    }
    .stellar-specifications-tabs{
      gap: 27px;
      overflow-x: auto;
      overflow-y: hidden;
    }
    .stellar-specifications-tabs-divider{
      margin-bottom: 24px;
    }
    .stellar-specifications-tab{
      font-size: 15px;
      line-height: 24px;
      text-transform: capitalize;
      min-width: fit-content;
      padding-bottom: 11px;
    }
    .stellar-specification-value, .stellar-specification-value p{
      font-family: 'SuisseIntl-Regular';
      font-weight: 400;
      font-size: 15px;
      line-height: 20px;
      letter-spacing: 0%;
      margin-bottom: 19px;
    }
    .stellar-specifications-content.active{
      display: block;
    }
  }



  @media screen and (max-width: 400px) {
    
     .stellar-specifications-tabs{
      gap: 20px;
    } 
    .stellar-specifications-tab , .stellar-specification-label{
      font-size: 14px;
    }
    .stellar-specification-value , .stellar-specification-value p{
      font-size: 15px;
    }
  }

  @media screen and (min-width: 1025px) {
    .stellar-specifications-right.desktop{
      display: block;
    }
    .stellar-specifications-right.mobile{
      display: none;
    }
  }

  @media screen and (min-width: 750px) {
    .stellar-specifications-{{ section.id }} {
