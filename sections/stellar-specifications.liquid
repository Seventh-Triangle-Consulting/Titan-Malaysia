{%- style -%}
  .stellar-specifications-{{ section.id }} {
    background-color: {{ section.settings.background_color | default: '#1C3250' }};
    padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
    margin-top: {{ section.settings.margin_top_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }
  .stellar-specifications-container {
    display: flex;
    gap: 23.98%;
    align-items: self-start;
    justify-content: space-between;
  }
  .stellar-specifications-left {
    flex: 1;
    max-width: 50%;
  }
  .stellar-specifications-right {
    flex: 1;
    max-width: 50%;
  }
  .stellar-specifications-heading {
    font-family: 'PPMonumentWide-Regular';
    font-weight: 400;
    font-size: clamp(25px, calc((45 / 1512) * 100vw), 45px);
    line-height: 44px;
    letter-spacing: 0%;
    color: #FFFFFF;
    margin-bottom: 45px;
  //  margin-top: 30px;
  }
  .stellar-specifications-divider {
    height: 1px;
    background-color: #666666;
    margin-bottom: 30px;
  }
  .stellar-specifications-tabs {
    display: flex;
    gap: 30px;
  }
  .stellar-specifications-tabs-divider {
    height: 1px;
    background-color: #FFFFFF4D;
    margin-bottom: 21px;
    display: block !important;
  }
  .stellar-specifications-tab {
    background: none;
    border: none;
    color: #999999;
    font-size: 16px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    font-family: 'PPMonumentWide-Regular';
    font-weight: 400;
    font-size: 19px;
    line-height: 24px;
    letter-spacing: 0%;
    color: #FFFFFF66;
    padding-bottom: 8px;
  }
  .stellar-specifications-tab.active {
    color: #ffffff;
  }
  .stellar-specifications-tab.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: #ffffff;
  }
  .stellar-specifications-content-divider {
    height: 1px;
    background-color: #666666;
    margin-bottom: 30px;
  }
  .stellar-specifications-content {
    display: none;
  }
  .stellar-specifications-content.active {
    display: grid;
  }
  .stellar-specification-item {
    margin-bottom: 25px;
  }
  .stellar-specification-label {
    color: #999999;
    font-size: 12px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 4px;
    font-family: 'SuisseIntl-Regular';
    font-weight: 400;
    font-style: Regular;
    font-size: 15px;
    line-height: 24px;
    letter-spacing: 0%;
    text-transform: uppercase;
    color: #FFFFFF99;
    margin-bottom: 8px;
  }
  .stellar-specification-value , .stellar-specification-value p{
    color: #ffffff;
    font-size: 16px;
    font-weight: 400;
    line-height: 1.4;
    font-family: 'SuisseIntl-Regular';
    font-weight: 400;
    font-size: 19px;
    line-height: 24px;
    letter-spacing: 0%;
    color: #FFFFFF;
  }
  .stellar-specifications-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    transition: opacity 0.3s ease;
  }

  /* Tab image visibility control */
  .stellar-specifications-image.tab-image {
    display: none !important;
    opacity: 0;
  }
  .stellar-specifications-image.tab-image.active {
    display: block !important;
    opacity: 1;
  }
  /* Desktop shows desktop images, hides mobile images */
  .stellar-specifications-image.tab-image.mobile-image.active {
    display: none !important;
  }
  .stellar-specifications-image.tab-image.desktop-image.active {
    display: block !important;
  }

  @media screen and (max-width: 1024px) {

    .stellar-specifications-{{ section.id }}{
      padding-top:68px;
    }
    .stellar-specifications-container {
      flex-direction: column-reverse;
      gap: 40px;
    }
    .stellar-specifications-left,
    .stellar-specifications-right {
      max-width: 100%;
      width: 100%;
    }
    .stellar-specifications-heading {
     font-size: 25px;
      line-height: 37px;
      margin-bottom: 36px;
      margin-top:30px;
    }

    .stellar-specifications-tabs {
      /* flex-wrap: wrap; */
      justify-content: space-between;
      overflow-x: auto;
      overflow-y: hidden;
    }

    .stellar-specifications-tabs::-webkit-scrollbar {
        display: none;
      }

      /* Firefox */
      .stellar-specifications-tabs{
        scrollbar-width: none;
      }

      /* IE and Edge */
      .stellar-specifications-tabs{
        -ms-overflow-style: none;
      }
    .stellar-specifications-tabs-divider {
      margin-bottom: 37px;
    }
    .stellar-specifications-tab {
       font-size: 17px;
      line-height: 24px;
      padding: 0px;
      padding-bottom:5px;
    }
    .stellar-specification-item{
      margin-bottom:0;
    }

    /* Mobile: hide desktop images, show mobile images */
    .stellar-specifications-image.tab-image.desktop-image.active {
      display: none !important;
    }
    .stellar-specifications-image.tab-image.mobile-image.active {
      display: block !important;
      line-height:0;
    }
    .stellar-specifications-right.desktop{
      display: none;
    }
    .stellar-specifications-right.mobile{
      display: block;
    }
    .stellar-specifications-content.active{
      display: grid;
      grid-template-columns: 1fr 1fr;
      justify-content: center;
      row-gap: 30px;
      column-gap:60px;
    }
    .stellar-specification-label{
      font-family: 'SuisseIntl-Regular';
      font-weight: 400;
      font-size: 14px;
      line-height: 24px;
      letter-spacing: 0%;
      text-transform: uppercase;
      color: #FFFFFF99;
      margin-bottom: 2px;
    }
    .stellar-specification-value, .stellar-specification-value p{
      font-family: 'SuisseIntl-Regular';
      font-weight: 400;
      font-size: 15px;
      line-height: 20px;
      letter-spacing: 0%;
    }
  }

  @media screen and (max-width: 768px) {

    .stellar-specifications-{{ section.id }} {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }

    .stellar-specifications-{{ section.id }} .stellar-page-width{
      padding-right:0;
    }
    .stellar-specifications-right.mobile{
      padding-right:23px;
    }

    .stellar-specifications-heading{
