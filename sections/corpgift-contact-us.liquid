        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Margin Bottom Mobile",
        "default": 36
      },
      {
        "type": "richtext",
        "id": "About_Us_title",
        "label": "Left side title"
      },
      {
        "type": "richtext",
        "id": "About_us_description",
        "label": "Left side description"
      },
      {
        "type": "image_picker",
        "id": "contact_us_image",
        "label": "Left side Image"
      },
      {
        "type": "richtext",
