<style>
  .section-{{ section.id }}-margin { margin-bottom: {{ section.settings.margin_bottom_desktop }}px;background: rgba(253, 215, 221, 0.80);padding:30px;}
   .page_postive_impact_flex{display:flex;justify-content:space-around;align-items:baseline;margin-bottom:13px;}
   .postive_impact_heading{color: #000;letter-spacing: 0.3px;text-align:center;margin-bottom:16px;}
  .positive_impact_sub_text{ color: #414042;text-align: center;font-size: clamp(calc(20 * .8px),calc(20 * (100vw / var(--viewportDesktop))),calc(20 * 1.1px));
    line-height: clamp(26px, calc(28 * (100vw /  var(--viewportDesktop))), 24px);letter-spacing: 0.2px;text-align:center;margin-bottom:60px;}
   .HPI_grid strong{font-family: 'Rubik-SemiBold';color: #000;text-align: center;font-size: clamp(calc(26 * .8px),calc(26 * (100vw / var(--viewportDesktop))),calc(26 * 1.1px));
    line-height: clamp(25px, calc(26 * (100vw /  var(--viewportDesktop))), 27px);font-weight: 700;letter-spacing: 0.26px;}
   .HPI_grid{text-align:center;    width: 24%;}
  .HPI_grid p{color: #000;text-align: center;font-size: clamp(calc(20 * .8px),calc(20 * (100vw / var(--viewportDesktop))),calc(20 * 1.1px));
    line-height: clamp(25px, calc(26 * (100vw /  var(--viewportDesktop))), 27px);letter-spacing: 0.2px;}
  .HPI_grid img{height: 50px;    object-fit: contain;
    width: 50px;}
  .page_positive_impact .knowmore{text-align:center;color:#000;}
 @media screen and (max-width: 820px) {
   .HPI_grid{width:50%;}
   .positive_impact_sub_text{margin-bottom:30px;}
 }
  @media screen and (max-width: 750px) {
    .HPI_grid strong{font-size:22px;line-height:26px;}
    .positive_impact_sub_text{color: #000;text-align: center;font-family: Rubik;font-size: 19px;font-style: normal;
    font-weight: 400;line-height: 24px; letter-spacing: 0.19px;}
     .home_postive_impact_flex{place-content: center;display: grid;gap: 32px;margin-bottom: 33px;}
    .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;padding:20px;}
     .HPI_grid{display: flex;justify-content: center;align-items: center;gap: 14px;width:100%;}
    .HPI_grid svg{ width: 79px;margin-bottom: 18px;}
    .HPI_grid span{color: #000;text-align: center;font-family: 'Rubik-Bold';font-size: 22px;font-style: normal;font-weight: 700;    margin-bottom: 20px;
    line-height:26px;letter-spacing: 0.22px;}
    .HPI_grid{width: 100%;}
    .HPI_grid img {
    height: 38px;
    width: 45px;}
    .page_postive_impact_flex{flex-direction:column;gap: 2rem;}
    .HPI_grid p{text-align: left;width: 60%;color: #000;font-family: 'Rubik-Regular';font-size: 16px;
    font-style: normal;font-weight: 400;line-height: 26px;letter-spacing: 0.16px;}
    
  }
  @media screen and (max-width: 391px)
  { .HPI_know_more h4{font-size:14px;} 
  .page_positive_impact.page-width{padding:0;}
}
</style>

<section class="section-{{ section.id }}-margin">
  <div class="page_positive_impact page-width">
    <h2 class="postive_impact_heading">{{ section.settings.positive_impact_heading }}</h2>
    <p class="positive_impact_sub_text">{{ section.settings.positive_impact_sub_text }}</p>

    <div class="page_postive_impact_flex">
       {%- for block in section.blocks -%}
    <div class="HPI_grid">
        {{ block.settings.image| image_url: width: 80 | image_tag: loading: 'lazy'}}
        <p>{{ block.settings.text }}</p>
      </div>
   
         {% endfor %}
          </div>
     <p class="knowmore"><span>And Counting...</span></p>
  </div>
</section>

{% schema %}
{
  "name": "Page Positive Impact",
  "settings": [
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    },
    {
      "type": "text",
      "id": "positive_impact_heading",
      "label": "Positive Impact Heading",
      "default": "Positive Impact Created"
    },
    {
      "type": "text",
      "id": "positive_impact_sub_text",
      "label": "Positive Impact Sub text",
      "default": "The below data shows the difference <br>we’ve made to the environment. You’re making a positive impact on the planet"
    },
    {
      "type": "url",
      "id": "page_positve_impact_url",
      "label": "Link"
    }
  ],
    "blocks": [
    {
      "type": "block",
      "name": "block",
      "settings": [
         {
          "type": "image_picker",
          "id": "image",
          "label": "Images",
           "info":"Recommended size 50X50"
        },
         {
          "type": "richtext",
          "id": "text",
          "label":"Text"
        }
       
      ]
    }
    ],
  "presets": [
    {
      "name": "Page Positive Impact",
      "blocks": [
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}
