{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
  }
{%- endstyle -%}
<h2 class="find-us-online-title">{{ section.settings.heading }}</h2>
<div class=" find-us-online-container {% if section.settings.showmobile == false %} hidemobile {% endif %}" style="background-color:{{ section.settings.bgcolor }};" >

  <div class="find-us-online page-width  ">
{%- for block in section.blocks -%}
      <div class="images {{ block.settings.links }}" role="region" {{ block.shopify_attributes }}>
        {%- if block.settings.image != blank -%}
              <a href="{{ block.settings.links }}"> {{  block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy'}}</a>
                
        {%- endif -%}
      </div>
 
{%- endfor -%}

    
  </div>
</div>

 
<style>
  .find-us-online-title{text-align:center;padding-bottom:3rem;}
.find-us-online-container{padding:0px;}
 .find-us-online{display: flex;gap: 5rem;  justify-content: center;  align-items: center;padding-top: 1.5rem;}
   .find-us-online .images{width:12%;}
  .find-us-online img{width:100%;height:auto;}
  @media screen and (max-width:768px){ 
    .find-us-online-container{padding:5px 10px;}
    .find-us-online img{width:100%;height:auto;}
     .find-us-online .images {width: 28%;}
    .find-us-online-title{padding-bottom:1rem;}
     .find-us-online{padding-top:.5rem;gap:2.4rem;}
   
    
  }
</style>


{% schema %}
{
  "name": "Find us online",
   "settings": [
      {
  "type": "color",
  "id": "bgcolor",
  "label": "Background color"
},
       {
  "type": "text",
  "id": "heading",
  "label": "Heading"
},
      {
  "type": "checkbox",
  "id": "showmobile",
  "label": "Show on Mobile",
  "default":true
},
     {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    }

    ],
  "max_blocks": 12,
  
  "blocks": [
    {
      "type": "text",
      "name": "add block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "links",
          "label": "Image link"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "find-us-online",
      "blocks": [
        {
          "type": "text"
        }
      
      ]
    }
  ] 

}
{% endschema %}
