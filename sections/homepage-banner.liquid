{{ 'homepage-banner.css' | asset_url | stylesheet_tag }}

<style>
  .section-{{ section.id }}-padding {
    margin-top: {{ section.settings.margin_top_desktop | times: 0.75 | round: 0 }}px;
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
 

  @media screen and (max-width: 768px) {
   .section-{{ section.id }}-padding {
      margin-top: {{ section.settings.margin_top_mobile | times: 0.75 | round: 0 }}px;
      padding-top: {{ section.settings.padding_top | divided_by: 2 | round: 0 }}px;
    }
  
  }
</style>
<div>

  <a
    href="{% if section.settings.button_link == blank %}#{% else %}{{ section.settings.button_link }}{% endif %}"
  >
    <div class="single-img-main-div  section-{{ section.id }}-padding">
      {% if section.settings.image_single_mob != blank %}
        {{
          section.settings.image_single_mob
          | image_url: width: 600
          | image_tag: class: 'single-img-mob', loading: 'lazy'
        }}
      {% endif %}

      {% if section.settings.image_single_des %}
        {{
          section.settings.image_single_des
          | image_url: width: 1600
          | image_tag: class: 'single-img-des', loading: 'lazy'
        }}
      {% endif %}
    </div>
  </a>
</div>

{% schema %}
{
  "name": " Single Banner",
  "settings": [
   {
      "type": "url",
      "id": "button_link",
      "label": "Banner Link"
    },
    {
      "type": "header",
      "content": "Desktop Devices"
    },
    {
      "type": "range",
      "id": "margin_top_desktop",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Spacing",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Inner Spacing Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Inner Spacing Bottom",
      "default": 36
    },
    {
      "type": "image_picker",
      "id": "image_single_des",
      "label": "Image",
      "info": "Recommended size is: 1800px x 649px"
    },
    {
      "type": "header",
      "content": "Mobile Devices"
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Spacing",
      "default": 0
    },
    {
      "type": "image_picker",
      "id": "image_single_mob",
      "label": "Image",
      "info": "Recommended size is: 600px x 731px"
    }
  ],
  "presets": [
    {
      "name": "Single Banner"
    }
  ]
}
{% endschema %}

