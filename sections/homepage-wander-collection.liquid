{{ 'homepage-wander-collection.css' | asset_url | stylesheet_tag: media: 'screen' }}

{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
      padding-right: 0;
    }
  }
{%- endstyle -%}

{% if section.blocks.size > 0 %}
  <section class="homepage-wander-container section-{{ section.id }}-margin" id="{{ section.id }}">
    <div class="page-width">
      <div class="wander-collection-title-Btn">
        <div class="homepage-wander-top-sub">
          {% if section.settings.wander_sub_title != blank %}
            <h3 class="homepage-wander-top-first-title">{{ section.settings.wander_sub_title }}</h3>
          {% endif %}
          {% if section.settings.wander_title != blank %}
            <h2 class="homepage-wander-top-second-title">{{ section.settings.wander_title }}</h2>
          {% endif %}
        </div>
        {% if section.blocks.size > 3 %}
          <div class="wander-button-container">
            <div class="swiper-prev">
              <div class="icon-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="14" viewBox="0 0 18 14" fill="none">
                  <path d="M6.22353 2.91699L2.33464 7.00033M2.33464 7.00033L6.22353 11.0837M2.33464 7.00033H16.918" stroke="#584536" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>

            <div class="swiper-next">
              <div class="icon-arrow">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="14" viewBox="0 0 18 14" fill="none">
                  <path d="M11.7765 2.91675L15.6654 7.00008M15.6654 7.00008L11.7765 11.0834M15.6654 7.00008H1.08203" stroke="#584536" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </div>
          </div>
        {% endif %}
      </div>

      <div class="homepage-wander">
        <div
          class="swiper mySwiper homepageWander22"
        >
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% if block.settings.collection_image != blank and block.settings.image_link != blank %}
                <div
                  class="swiper-slide"
                >
                  <a href="{{ block.settings.image_link }}">
                    {{
                      block.settings.collection_image
                      | image_url: width: 600
                      | image_tag: class: 'collectionImage', loading: 'lazy'
                    }}
                  </a>
                </div>
              {% endif %}
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </section>
{% endif %}

<script>
  window.addEventListener(
    'DOMContentLoaded',
    () => {
      let wanderCollection11 = new Swiper(`#{{section.id}} .homepageWander22`, {
    
          navigation: {
          nextEl: '#{{ section.id }} .swiper-next',
          prevEl: '#{{ section.id }} .swiper-prev',
        },
        breakpoints: {
          0: {
            slidesPerView: 1.25,
            spaceBetween: 22,
          },
          650: {
            slidesPerView: 2,
            spaceBetween: 30,
          },
          1024: {
            slidesPerView: 3,
            spaceBetween: 28,
          },
          
        },
       
      });
    },
    { once: true }
  );
</script>

{% schema %}
{
  "name": "Wander Collections",
  "settings": [
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    },
    {
      "type": "richtext",
      "id": "wander_sub_title",
      "label": "Sub Title"
    },
    {
      "type": "richtext",
      "id": "wander_title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Slide",
      "settings": [
         {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Image"
        },
       {
          "type": "url",
          "id": "image_link",
          "label": "Image link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Wander Collections"
    }
  ]
}
{% endschema %}

