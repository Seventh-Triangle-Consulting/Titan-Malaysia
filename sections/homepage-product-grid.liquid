<style>
.home-grid-section .container {
  padding: 5px;
  display: grid;
  {% comment %} grid-template-columns: minmax(280px, 1fr)); {% endcomment %}
  grid-auto-rows: auto;
  grid-template-columns: repeat(2, 1fr) 2fr repeat(2, 1fr);
  grid-template-rows: repeat(2, 1fr);
  grid-row-gap: 5px;
  grid-column-gap: 5px;
  {% comment %} max-width: 1400px; {% endcomment %}
  width: 100%;
}


.watch-card {
  position: relative;
  width: 100%;
  aspect-ratio: 3/4;
  {% comment %} border-radius: 20px; {% endcomment %}
  overflow: hidden;
  cursor: pointer;
  {% comment %} box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5); {% endcomment %}
  transition: transform 0.3s ease;
}


.watch-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center; /* default center */
  display: block;
  {% comment %} position: relative; {% endcomment %}
  position: absolute;
  transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1), object-position 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}


.watch-card:hover .watch-image {
  transform: scale(1.05) translateY(15%); /* slightly zoom and move down */
  object-position: center top; /* crops top, revealing overlay */
}


.overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: auto;
  background: linear-gradient(180deg, rgba(20, 30, 48, 0.95) 0%, rgba(20, 30, 48, 0.98) 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 10px 10px;
  clip-path: inset(0 0 100% 0);
  transition: clip-path 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 10;
}


.watch-card:hover .overlay {
  clip-path: inset(0 0 0 0);
}


.overlay-content {
  text-align: center;
  color: #fff;
  transform: translateY(-30px);
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1) 0.2s;
}


.watch-card:hover .overlay-content {
  transform: translateY(0);
  opacity: 1;
}


.overlay-content h3 {
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 20px;
  line-height: 1.4;
  color: #fff;
}


.overlay-content p {
  font-size: 1rem;
  line-height: 1.6;
  color: #e0e0e0;
  margin-bottom: 25px;
}


.arrow {
  width: 40px;
  height: 40px;
  border: 2px solid #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  transition: all 0.3s ease;
}

.watch-card:hover .arrow {
  transform: translateX(5px);
  background: rgba(255, 255, 255, 0.1);
}

.arrow svg {
  width: 20px;
  height: 20px;
  stroke: #fff;
  stroke-width: 2;
  fill: none;
}

@media (max-width: 768px) {
  .parent {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 1fr);
    grid-column-gap: 0px;
    grid-row-gap: 0px;
  }
  {% for block in section.blocks %}
    {% assign home_grid_product = all_products[block.settings.home-grid-product] %}
      .watch-{{ home_grid_product.id }} { grid-area: 1 / 3 / 2 / 5; }
      .div2 { grid-area: 1 / 2 / 2 / 3; }
      .div3 { grid-area: 1 / 1 / 2 / 2; }
      .div4 { grid-area: 2 / 1 / 3 / 3; }
      .div5 { grid-area: 2 / 3 / 3 / 4; }
      .div6 { grid-area: 2 / 4 / 3 / 5; }
      .div7 { grid-area: 3 / 1 / 4 / 2; }
      .div8 { grid-area: 3 / 2 / 4 / 3; }
      .div9 { grid-area: 3 / 3 / 4 / 4; }
      .div10 { grid-area: 3 / 4 / 4 / 5; }
      
  {% endfor %} 

  .container {
    grid-template-columns: 1fr;
  }

  .overlay-content h3 {
    font-size: 1.2rem;
  }

  .overlay-content p {
    font-size: 0.9rem; 
  }

  
</style>

<section class="home-grid-section">

  <div class="container">
  {% for block in section.blocks %}
    {% assign home_grid_product = all_products[block.settings.home-grid-product] %}
    {% if home_grid_product %}
    <div class="watch-card watch-{{ home_grid_product.id }}">
      <div class="img-height">
        <a href="{{ home_grid_product.url }}">
            {{ home_grid_product.featured_image | image_url: width: 200 | image_tag: class: 'watch-image', loading: 'lazy' }}
        </a>
      </div>
      <div class="overlay">
        <div class="overlay-content">
          <p> {{ home_grid_product.description }} </p>
          <div class="arrow">
            <svg viewBox="0 0 24 24">
              <path d="M5 12h14M12 5l7 7-7 7" />
            </svg>
          </div>
        </div>
      </div>
    </div>
  {% endif %}
  {% endfor %}
  </div>

</section>




