{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
  }
{%- endstyle -%}
<div class="partnerscrollbartitle"><h2>{{ section.settings.heading }}</h2></div>
  <div class=" partnerscrollbar swiper " style="background-color:{{ section.settings.bgcolor }};" >
    <div class="swiper-wrapper">
      
{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'text' -%}
      <div class=" partnerscrollbardiv swiper-slide" role="region" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}

             
                {{  block.settings.image | image_url: width: 150 | image_tag: loading: 'lazy'}}
           <p class="partnerscrollbar__message ">
                   {{ block.settings.text | escape }}
              </p>
        {%- endif -%}
      </div>
  {%- endcase -%}
{%- endfor -%}
    </div>    
  </div>
 
<style>
  .partnerscrollbartitle{text-align:center;}
   .partnerscrollbardiv img{width: 70%; object-fit: contain;height: 100px;}
     .partnerscrollbar{padding: 32.5px 15px; margin-top: 15px;}
   .partnerscrollbardiv{padding:12px;text-align:center;}
   .partnerscrollbardiv p{text-align:center; font-size: clamp(calc(17 * .8px),calc(17 * (100vw / var(--viewportDesktop))),calc(17 * 1.1px));
    line-height: clamp(21px, calc(22* (100vw /  var(--viewportDesktop))), 25px);color:#000;}
  @media screen and (max-width:750px){
    .partnerscrollbardiv p{font-size:13px;    line-height: 18px;}
     .partnerscrollbar{padding: 23px 10px;}
     .partnerscrollbardiv{padding:0 5px;}.partnerscrollbardiv img{height:80px;}
  }
</style>
<script>
    
    window.addEventListener('DOMContentLoaded', () => {
      var partnerscrollbar = new Swiper('.partnerscrollbar', {
         slidesPerView: 3,
        loop: true,
        autoplay: {
          delay: 2000,
        },
        
        breakpoints: {
           300: {
            enteredSlides: true,
            slidesPerView: 2,
            spaceBetween: 10,
          },
          480: {
            enteredSlides: true,
            slidesPerView: 3,
            spaceBetween: 20,
          },
          900: {
            slidesPerView: 7,
            spaceBetween: 10,
          },
        },
      });
    });
     
</script>

{% schema %}
{
  "name": "partners Scroll Bar",
   "settings": [
      {
  "type": "color",
  "id": "bgcolor",
  "label": "Background color"
},
      {
  "type": "checkbox",
  "id": "showmobile",
  "label": "Show on Mobile",
  "default":true
},
      {
  "type": "text",
  "id": "heading",
  "label": "Section Heading"
},
     {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    }

    ],
  "max_blocks": 12,
  
  "blocks": [
    {
      "type": "text",
      "name": "add block",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Welcome to our store",
          "label": "Text block"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
   "presets": [
    {
      "name": "Partners scrollbar",
      "blocks": [
        {
          "type": "text"
        }
      
      ]
    }
  ] 

}
{% endschema %}
