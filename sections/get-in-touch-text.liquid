{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<section class="get-in-touch-image-text {{ section.settings.classname }} section-{{ section.id }}-margin" id="{{ section.id }}" style="background:{{ section.settings.bgcolor }}">
  <div class="container page-width">  
<div class="contentsection"> 
<h2>{{ section.settings.heading }}</h2>
  <div class="subpara page-width"><p>{{ section.settings.subheading }}</p>
    {% if section.settings.buttonurl != blank %}
  <a href="{{ section.settings.buttonurl }}" class="button"> {{ section.settings.button }}</a>
      {% endif %}
  </div>
  </div>
  </div>
 
</section>
<style>
  .get-in-touch-image-text{text-align: center;}
      .get-in-touch-image-text .container{padding: 50px 120px;padding-bottom: 0;}
 .get-in-touch-image-text .container h2{margin:10px 0;}
  .get-in-touch-image-text  .contentsection{width:75%;margin:auto;}
  .get-in-touch-image-text p{color:#000;}
  .get-in-touch-image-text p,.get-in-touch-image-text p a{font-size: clamp(calc(28 * .8px),calc(28 * (100vw / var(--viewportDesktop))),calc(28 * 1.1px));
    line-height: clamp(41px, calc(42 * (100vw /  var(--viewportDesktop))), 43px);}
   .get-in-touch-image-text p a{color: #dd5041;}
  .get-in-touch-image-text.our-commitment p{font-size: clamp(calc(22 * .8px),calc(22 * (100vw / var(--viewportDesktop))),calc(22 * 1.1px));
    line-height: clamp(33px, calc(34 * (100vw /  var(--viewportDesktop))), 35px);}
  .get-in-touch-image-text.our-commitment .container{padding-bottom:4rem;}
  .get-in-touch-image-text.our-goal .container{padding-bottom:4rem;}
  .get-in-touch-image-text.our-goal .container h2{    padding-bottom: 1rem;}
.get-in-touch-image-text .button{background: rgba(239, 49, 51, 1);font-family:'Rubik-Medium';font-weight:500;font-size: clamp(calc(18 * .8px),calc(18 * (100vw / var(--viewportDesktop))),calc(18 * 1.1px));
    line-height: clamp(34px, calc(34 * (100vw /  var(--viewportDesktop))), 34px);padding:8px 53px;border-radius:4px;}
 .get-in-touch-image-text .button:after{content:none;}
  .get-in-touch-image-text p a{color: #dd5041;    text-decoration: none;}
.get-in-touch-image-text.our-commitment .contentsection{width:90%;}

   @media screen and (min-width:750px) and (max-width:900px){
     .get-in-touch-image-text.our-commitment .container h2{font-size:22px;}
     .get-in-touch-image-text.our-commitment p{font-size:16px;}
     .get-in-touch-image-text.our-commitment .container .subpara{padding: 0 3rem !important;}
     .get-in-touch-image-text.our-commitment .contentsection{width:100%;}

   }
  @media screen and (max-width:749px){
    .get-in-touch-image-text .container {
    padding: 30px 20px;    padding-bottom: 0;}
    .get-in-touch-image-text .button{font-size:17px;line-height:34px;}
    .get-in-touch-image-text.our-commitment .container .subpara{padding: 0 5px;}
    .get-in-touch-image-text.our-commitment .contentsection{width:100%;}
    .get-in-touch-image-text.our-commitment p{font-size:18px;line-height:29px;}
    .get-in-touch-image-text.our-commitment .container {  padding: 20px 10px;}
    .get-in-touch-image-text p,.get-in-touch-image-text p a{font-size:20px;line-height:26px;}
     .get-in-touch-image-text  .contentsection{width:100%;margin:auto;}
  }
  @media screen and (max-width:391px){
    .get-in-touch-image-text p,.get-in-touch-image-text p a{font-size:18px;line-height:24px;}
    .get-in-touch-image-text .container {
    padding: 30px 10px;}
  }


</style>
{% schema %}
  {
    "name": "Get In Touch",
    "settings": [
       {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    },
      
       {
      "type": "text",
      "id": "classname",
      "label": "Section Class Name"
    },
      {
      "type": "color",
      "id": "bgcolor",
      "label": "Section Background"
    },
       {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
      {
      "type": "richtext",
      "id": "subheading",
      "label": "Sub Text"
    },
       {
      "type": "text",
      "id": "button",
      "label": "Button Label"
    },
      {
      "type": "url",
      "id": "buttonurl",
      "label": "Button Link"
    }
      
    ],
  "presets": [
    {
      "name": "Get In Touch"
    }
  ]
}
{% endschema %}

