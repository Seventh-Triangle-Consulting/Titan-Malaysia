        {
          "type": "header",
          "content": "Desktop Devices"
        },
        {
          "type": "image_picker",
          "id": "Desktop-Banner-Image",
          "label": "Image"
        },

        {
          "type": "video",
          "id": "video_url",
          "label": "Video"
        },
