{% liquid 
    assign pt = section.settings.pt | prepend: 'pt-'
    assign pb = section.settings.pb | prepend: 'pb-'
    assign mt = section.settings.mt | prepend: 'mt-'
    assign mb = section.settings.mb | prepend: 'mb-'

    assign row_sm =  section.settings.row_sm | prepend: 'row-cols-sm-'
    assign row_lg =  section.settings.row_lg | prepend: 'row-cols-lg-'
%}

<section 
    id="featured-products-{{ section.id }}" 
    class="featured-products best-container{% if section.settings.recommended_mode %}recommended-products{% endif %} {{ section.settings.bg_color }} {{ section.settings.text_align }} {{ pt }} {{ pb }} {{ mt }} {{ mb }}"
    data-base-url="{{ routes.product_recommendations_url }}"
    data-section-id="{{ section.id }}"
    data-product-id="{{ product.id }}" 
    data-limit="{{ section.settings.limit }}">
    <div class="container-fluid position-relative overflow-hidden bs-main-container">
        <h2 class="title best-title {{ section.settings.title_size }}">
            {{ section.settings.title }}
        </h2>

         <div class="p-ul-header">
            <ul>
                 {% for block in section.blocks %}
                    {% if block.settings.coll_name != blank %}
                     <li> <button  data-id="ga-pl-{{ block.id }}" class="{% if forloop.index == 1 %} ga-active {% endif %} "> {{ block.settings.coll_name }} </button> </li>
                    {% endif %}
                    {% endfor %}
            </ul>
         </div>

        {% for block in section.blocks %}
          {% liquid 
              assign c = block.settings.coll
          %}
          <ul id="ga-pl-{{ block.id }}" class="product-list list-unstyled row mx-n3 mb-0 bs-ul ga-pl {% if forloop.index == 1 %} ga-active {% endif %} {{ row_sm }} {{ row_lg }}">
              {% liquid
                  if section.settings.recommended_mode
                      for product in c.products
                          render 'product-item', product: product
                      endfor
                  else
                      for product in c.products limit: section.settings.limit
                          render 'product-item', product: product
                      endfor
                  endif
              %}
          </ul>
        {% endfor %}
        {% unless section.settings.recommended_mode and section.settings.btn_text == blank %}
            <a class="btn mt-6 mb-0 bs-viewall {{ section.settings.btn_color }}" href="{{ collections[section.settings.collection].url }}">
                {{ section.settings.btn_text }}
            </a>
        {% endunless %}
    </div>
</section>

