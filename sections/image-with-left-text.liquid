<style>
   .image--section---container{margin: 4% 0;  padding: 0 5%;}
   .img-left-text .left-text-container{ padding-left:4%; padding-top:5%; padding-bottom:5%; padding-right:3%;}
   .img-left-text .sub-title--text{ font-size: 2.5vw;letter-spacing:0px;color:#231F20;font-family:"Inter-Light";}
   .img-left-text .main-title--text{ font-size: 4.65vw;letter-spacing: 0px;margin-bottom: 5%;color:#6EB3BC;  font-family:"Inter-Medium";}
  .img-left-text .title-description--text p
  {
    font-size: 1.30vw;
    font-family: "Inter-Regular";
    width: 90%;
    letter-spacing: 0px;
    color: #231F20;
  }
  .img-left-text .right-text-container img
  {
    width:100%;
    height:auto;
  }
   @media (min-width:500px) and (max-width: 992px){
     .img-left-text .sub-title--text {font-size: 24px; height: unset;}
     .img-left-text .main-title--text {font-size: 45px; line-height: unset;}
     .img-left-text .title-description--text { font-size:22px;}
   }
  @media(max-width:500px){
    .img-left-text .sub-title--text{ font-size: 5.9vw;}
    .img-left-text .main-title--text{font-size: 10.5vw;margin-bottom:2%;}
    .img-left-text .title-description--text p{font-size: 4.89vw;}
    
  }
</style>

<div class="container-fluid image--section---container img-left-text">
  <div class="row">
    <div class="col-sm-12 col-md-6 text-left left-text-container">
           <div class="sub-title--text ">{{section.settings.subtext_title }}</div>
           <div class="main-title--text ">{{section.settings.main_title }}</div>
           <div class="title-description--text">{{section.settings.text-description}}</div>
     </div>
     <div class=" col-sm-12 col-md-6  right-text-container">
         <img  class="img-fluid right-img----banner"
              srcset="{%- if section.settings.image_with_left_text.width >= 375 -%}{{ section.settings.image_with_left_text | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 550 -%}{{ section.settings.image_with_left_text | image_url: width: 550 }} 550w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 750 -%}{{ section.settings.image_with_left_text | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 1100 -%}{{ section.settings.image_with_left_text | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 1500 -%}{{ section.settings.image_with_left_text | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 1780 -%}{{ section.settings.image_with_left_text | image_url: width: 1780 }} 1780w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 2000 -%}{{ section.settings.image_with_left_text | image_url: width: 2000 }} 2000w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 3000 -%}{{ section.settings.image_with_left_text | image_url: width: 3000 }} 3000w,{%- endif -%}
              {%- if section.settings.image_with_left_text.width >= 3840 -%}{{ section.settings.image_with_left_text | image_url: width: 3840 }} 3840w,{%- endif -%}
              {{ section.settings.image_with_left_text | image_url }} {{ section.settings.image_with_left_text.width }}w"
              sizes="100vw"
              src="{{ section.settings.image_with_left_text | image_url: width: 1500 }}"
              loading="lazy"
              alt="{{ section.settings.image_with_left_text.alt | escape }}"
              width="{{ section.settings.image_with_left_text.width }}"
              height="{{ section.settings.image_with_left_text.height }}"
            >
     </div>
</div>
</div>

{% schema %}
  {
    "name": "Image with Left Text",
    "settings": [
      {
        "type": "text",
        "id": "subtext_title",
        "label": "Sub-Heading"
      },
       {
        "type": "text",
        "id": "main_title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "text-description",
        "label": "Paragraph"
      },
      {
        "type": "image_picker",
        "id": "image_with_left_text",
        "label": "Image"
      }
    ],
    "presets": [{"name" : "Image with Left Text"}]
  }
{% endschema %}

