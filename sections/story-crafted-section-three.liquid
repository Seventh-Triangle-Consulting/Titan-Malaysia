{{ 'story-crafted-section.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<section class="storycrafted-image-text section-{{ section.id }}-margin" id="{{ section.id }}">
<div  class="background">
  <div class="container page-width">
  
<div class="contentsection"> 
  <div class="imagesection  mobile ">
{{ section.settings.mbimage | image_url: width: 800 | image_tag: loading: 'lazy'}}
  </div>
  <div class="rightcontent">
  {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
          
              <h2
                class="image-with-text__heading inline-richtext ">
                {{ block.settings.heading }}
              </h2>
          
            {%- when 'text' -%}
              <div class="image-with-text__text rte">
                {{ block.settings.text }}
              </div>

          {%- endcase -%}
        {%- endfor -%}
  </div>
</div>
  </div>
  </div>
    <div class="imagesection  desktop page-width">
{{ section.settings.image | image_url: width: 900 | image_tag: loading: 'lazy'}}
  </div>

<div class="carfted-bottomcontainer page-width">
{%- for block in section.blocks -%}
  {% case block.type %}
            {%- when 'bottom-icon' -%}
<div class="box">
  {{ block.settings.icon| image_url: width: 70 | image_tag: loading: 'lazy'}}
  <div class="text">  <h6> {{ block.settings.heading }}</h6>
  <p>{{ block.settings.subtext}}</p></div>
</div>
    {% endcase %}
  {% endfor %}
</div>
 
</section>

{% schema %}
  {
    "name": "Story Section Three",
    "settings": [
       {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    },
       {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
        "info":"Recomended size 802X610"
    },
      {
      "type": "image_picker",
      "id": "mbimage",
      "label": "Mobile Image",
        "info":"Recomended size 802X610"
    }
      
    ],
      
     "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
         {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "Heading"
        }
      
    ]
    },       
         {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Text"
        }
      ]
     },
       {
      "type": "bottom-icon",
      "name": "bottom-icon",
      "limit": 2,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
            "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subtext",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Text"
        }       
      ]
     }
     
     ],   
       
  "presets": [
    {
      "name": "Story Carfted Section Three",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "bottom-icon"
        }
      ]
    }
  ]
}
{% endschema %}

