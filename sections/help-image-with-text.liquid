{{ 'help-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-margin {
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }

  @media screen and (max-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
  }
{%- endstyle -%}

<section class="help-image-with-text  section-{{ section.id }}-margin" id="{{ section.id }}">
  <div class="swiper helpswiper">
    <div class="swiper-wrapper">
       {%- for block in section.blocks -%}
         <div  class="swiper-slide">
<div style="background-color:{{ section.settings.bgcolor }};">
  <div class="container page-width">
  <div class="imagesection">
{{ block.settings.image | image_url: width: 500 | image_tag: loading: 'lazy'}}
  </div>
  <div class="imagesection icon">
{{ section.settings.iconimage | image_url: width: 100 | image_tag: loading: 'lazy'}}
  </div>
<div class="contentsection"> 
       <h2
                class="image-with-text__heading inline-richtext ">
                {{ block.settings.heading }}
              </h2>
          
              <div class="image-with-text__text rte">
                {{ block.settings.text }}
              </div>

         
</div>
</div>
</div>
{% if block.settings.caption != blank %}
  <div class="bottomcontentsection page-width"> 
              <h2
                class="image-with-text__text image-with-text__text--caption ">
                {{ block.settings.caption | escape }}
              </h2>
          
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button button--secondary"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
                {% endif %}
  </div> 
  {% endif %}
        
</div>
      
                  {%- endfor -%}
                  
    </div>
     <div class="help-nav-btns">
                       <div class="swiper-ctrl help-button-prev">{% render 'icon-arrow-next' %}</div>
                       <div class="swiper-ctrl help-button-next">{% render 'icon-arrow-next' %}</div>
    
              </div>
  </div>
              
</section>
<script data-defer="nodefer">
  window.addEventListener(
    'DOMContentLoaded',
    () => {
      let plptabSwiper = new Swiper(`#{{- section.id }} .helpswiper`, {
        slidesPerView: 1,
        spaceBetween: 10,
        grabCursor: true,
        lazy: true,
        loop: false,
        freeMode: {
          enabled: true,
          sticky: true,
        },
        navigation: {
    nextEl: '#{{- section.id }} .help-button-next',
    prevEl: '#{{- section.id }} .help-button-prev',
  },
      });
    },
    { once: true }
  );
</script>
{% schema %}
  {
    "name": "Help image Text",
    "settings": [
       {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Desktop",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom Mobile",
      "default": 36
    },
       {
      "type": "image_picker",
      "id": "iconimage",
      "label": "Icon Image",
        "info":"Recomended size 204X105"
    },
        {
      "type": "color",
      "id": "bgcolor",
      "label": "Background Color"
    }
    ],
      
     "blocks": [
    {
      "type": "block",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "settings": [
         {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "Heading"
        },
         {
      "type": "image_picker",
      "id": "image",
      "label": "Image",
        "info":"Recomended size 354X354"
    },
        {
          "type": "text",
          "id": "caption",
          "default": "Add a tagline",
          "label": "caption"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
         },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
     ],   
       
  "presets": [
    {
      "name": "Help Image Text",
      "blocks": [
        {
          "type": "block"
        }
      ]
    }
  ]
}
{% endschema %}

