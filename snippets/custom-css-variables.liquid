    --mobile-line-height-a: {% if mobile-line-height-a == 0.00 %}normal{% elsif mobile-line-height-a < 1 or mobile-line-height-a > 2 %}1{% else %}{{ mobile-line-height-a }}{% endif %};
  }
{% endstyle %}
