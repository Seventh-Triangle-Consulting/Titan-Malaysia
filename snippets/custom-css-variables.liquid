    --mobile-line-height-h4: {% if mobile-line-height-h4 == 0.00 %}normal{% elsif mobile-line-height-h4 < 1 or mobile-line-height-h4 > 2 %}1{% else %}{{ mobile-line-height-h4 }}{% endif %};

    {% assign desktop-line-height-h5 = settings.desktop-line-height-h5 | split: " " | first | plus: "0.00" %}
    {% assign mobile-line-height-h5 = settings.mobile-line-height-h5 | split: " " | first | plus: "0.00" %}
    --desktop-line-height-h5: {% if desktop-line-height-h5 == 0.00 %}normal{% elsif desktop-line-height-h5 < 1 or desktop-line-height-h5 > 2 %}1{% else %}{{ desktop-line-height-h5 }}{% endif %};
    --mobile-line-height-h5: {% if mobile-line-height-h5 == 0.00 %}normal{% elsif mobile-line-height-h5 < 1 or mobile-line-height-h5 > 2 %}1{% else %}{{ mobile-line-height-h5 }}{% endif %};

    {% assign desktop-line-height-h6 = settings.desktop-line-height-h6 | split: " " | first | plus: "0.00" %}
    {% assign mobile-line-height-h6 = settings.mobile-line-height-h6 | split: " " | first | plus: "0.00" %}
    --desktop-line-height-h6: {% if desktop-line-height-h6 == 0.00 %}normal{% elsif desktop-line-height-h6 < 1 or desktop-line-height-h6 > 2 %}1{% else %}{{ desktop-line-height-h6 }}{% endif %};
    --mobile-line-height-h6: {% if mobile-line-height-h6 == 0.00 %}normal{% elsif mobile-line-height-h6 < 1 or mobile-line-height-h6 > 2 %}1{% else %}{{ mobile-line-height-h6 }}{% endif %};

    {% assign desktop-line-height-p = settings.desktop-line-height-p | split: " " | first | plus: "0.00" %}
    {% assign mobile-line-height-p = settings.mobile-line-height-p | split: " " | first | plus: "0.00" %}
    --desktop-line-height-p: {% if desktop-line-height-p == 0.00 %}normal{% elsif desktop-line-height-p < 1 or desktop-line-height-p > 2 %}1{% else %}{{ desktop-line-height-p }}{% endif %};
    --mobile-line-height-p: {% if mobile-line-height-p == 0.00 %}normal{% elsif mobile-line-height-p < 1 or mobile-line-height-p > 2 %}1{% else %}{{ mobile-line-height-p }}{% endif %};

    {% assign desktop-line-height-a = settings.desktop-line-height-a | split: " " | first | plus: "0.00" %}
